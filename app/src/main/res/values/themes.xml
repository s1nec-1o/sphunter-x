<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- iOS 风格主题 -->
    <style name="Theme.SpHunter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ios_green</item>
        <item name="colorSecondaryVariant">@color/ios_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ios_gray_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/ios_background</item>
        <!-- Button style -->
        <item name="materialButtonStyle">@style/IOSButton</item>
    </style>
    
    <!-- iOS 风格按钮 -->
    <style name="IOSButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <!-- iOS 风格卡片 -->
    <style name="IOSCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/ios_card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>