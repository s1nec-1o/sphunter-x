<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_gray_light"
    tools:context=".MainActivity">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ios_background"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_fingerprint"
            android:textSize="32sp"
            android:textColor="@color/ios_text_primary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="-0.01" />

    </LinearLayout>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ios_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            style="@style/IOSButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_java_fingerprint"
            android:backgroundTint="@color/ios_blue"
            android:textColor="@color/white"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/button2"
            style="@style/IOSButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/btn_native_fingerprint"
            android:backgroundTint="@color/ios_green"
            android:textColor="@color/white"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- 输出结果卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/ios_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 标签 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/output_label"
                android:textSize="14sp"
                android:textColor="@color/ios_text_secondary"
                android:fontFamily="sans-serif"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/ios_separator" />

            <!-- 输出内容 -->
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/textViewResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/output_placeholder"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:textColor="@color/ios_text_primary"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:background="@color/ios_background" />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>